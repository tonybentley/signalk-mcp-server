{
  "name": "signalk-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for SignalK marine data integration",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node --loader ts-node/esm src/index.ts",
    "start:prod": "node dist/src/index.js",
    "dev": "node --loader ts-node/esm --watch src/index.ts",
    "test": "jest",
    "test:unit": "jest --testPathPatterns=\\.spec\\.ts$",
    "test:e2e": "jest --testPathPatterns=\\.e2e\\.spec\\.ts$",
    "test:watch": "jest --watch",
    "test:watch:unit": "jest --watch --testPathPatterns=\\.spec\\.ts$",
    "test:watch:e2e": "jest --watch --testPathPatterns=\\.e2e\\.spec\\.ts$",
    "test:coverage": "jest --coverage --testPathPatterns=\\.spec\\.ts$",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "signalk",
    "mcp",
    "marine",
    "navigation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@signalk/client": "^2.3.0",
    "dotenv": "^16.4.5",
    "ws": "^8.18.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.2",
    "@types/dotenv": "^6.1.1",
    "@types/node": "^24.0.3",
    "@types/ws": "^8.18.1",
    "jest": "^30.0.2",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
